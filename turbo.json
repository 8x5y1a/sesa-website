{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"],
            "env": [
                "POSTGRES_URL",
                "NODE_ENV",
                "NEXT_PUBLIC_RECAPTCHA_SITE_KEY",
                "RECAPTCHA_SECRET_KEY",
                "EMAIL_USER",
                "EMAIL_PASS"
            ]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "env": ["NODE_ENV"]
        }
    }
}
